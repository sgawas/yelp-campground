<%layout('layouts/boilerplate')%>
<h1 class="text-center">Login</h1>
<div class="row">
    <div class="col-6 offset-3">
        <form action="/login" method="POST" novalidate class="validate-form">
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" name="username" id="username" placeholder="username" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid username.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" name="password" id="password" placeholder="password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a password.
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Login</button>
                <button type="submit" class="btn btn-info"><a href="/register" class="text-light">Register</a></button>
                <button type="submit" class="btn btn-danger"><a href="/campgrounds" class="text-light">Cancel</a></button>
            </div>
        </form>
    </div>
</div>