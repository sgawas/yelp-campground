    <%layout('layouts/boilerplate')%>
    <div id="map" style="width: 100%; height: 500px;"></div>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new" class="btn btn-secondary">Create New Campground</a>
    </div>
    <br>
    <% for(let camp of campgrounds){ %>
       <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <% if(camp.images.length){ %> 
                    <img src="<%=camp.images[0].url%>" alt="" class="img-fluid">
                <% } else { %>
                    <img src="https://res.cloudinary.com/dutkizxmn/image/upload/v1606938000/samples/landscapes/beach-boat.jpg" alt="" class="img-fluid">
                <% } %>  
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %> </h5>
                    <p class="card-text"><%= camp.description %> </p>
                    <p class="card-text">
                        <small class="text-muted"><%= camp.location %> </small>
                    </p>
                    <a href="/campgrounds/<%=camp.id%>" class="btn btn-primary"><%= camp.title %> </a>
                </div>
            </div>
        </div>
       </div>
    <% } %>  
